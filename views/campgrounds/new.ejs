<% include ../partials/header %>


       <div class="row justify-content-center">       
             <div class="col-md-12  text-center">
         <h1>Create a New Campground</h1> 
        </div>
        <div class="col-xs-12 col-md-6 col-lg-4">
            <form id="campgroundNew" action="/campgrounds" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                <label for="name">NAME:</label>
                    <input id="name" class="form-control" type="text" name="campground[name]" placeholder="name" required minlength="3">
                </div>
                 <div class="form-group">
                    <label for="imageUrl">IMAGE:</label>
                    <input id="imageUrl" type="file" name="image" accept="image/*" required>
                </div>
                <div class="form-group">
                <label for="price">PRICE:</label>
                    <input id="price" class="form-control" type="number" step="10" min="10" name="campground[price]" placeholder="price" required>  
                </div>
                <div class="form-group">
                <label for="description">DESCRIPTION:</label>
                    <input id="description" class="form-control" type="text" name="campground[description]" placeholder="description" required>
                </div>
                <div class="form-group">
                   <label for="location">LOCATION:</label>
                      <input id="location" class="form-control" type="text" name="campground[location]" id="campground[location]" placeholder="Yosemite National Park, CA" required>
                   </div>
                   <hr>
                    <div class="form-group">
                    <button id ="campgroundNewButton" class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            
          <div class="form-signin">
            <a href="/campgrounds">Go Back</a>  
         </div>
         
        </div>
      </div>

<% include ../partials/footer %>

